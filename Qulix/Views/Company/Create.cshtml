@model CompanyViewModel

<form method="post" asp-controller="Company" asp-action="Create">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Company Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control" id="inputName" placeholder="Name">
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Organizational Form</label>
        <div class="col-sm-10">
            <input asp-for="OrganizationalForm" type="text" class="form-control" placeholder="OrganizationalForm">
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary" style="margin-left: 0%">Create</button>
    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="margin-left: 3%">Back to Company
        List</a>
    </div>

</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}